@model Angular_HrmsApp.Models.EmployeeDetails
@{
    ViewBag.Title = "Update_Data";
    Layout = "~/Views/Shared/_HrmsAdminMaster.cshtml";
}

<html>
<head>
   
</head>
<body>
    <div ng-app="Homeapp" ng-controller="CURDController">
        <div class="container">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <div class="form-group">
                        <label>EmployeeNumber</label>
                        <input type="text" ng-model="@Model.employee_num" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Employee Name</label>
                        <input type="text" ng-model="@Model.fullname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Mobile Number</label>
                        <input type="text" ng-model="@Model.cellphone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>E-Mail</label>
                        <input type="text" ng-model="@Model.email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" ng-model="@Model.city" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="button" class="btn btn-primary" ng-click="Updatedata()" value={{btntext}}>
                    </div>

                </div>
                <div class="col-sm-2"></div>
            </div>
        </div>
    </div>
    <script src="~/AngularScripts/CurdOperation.js"></script>
    <script src="~/Angula_JS/angular.min.js"></script>
</body>
</html>

